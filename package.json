{
  "name": "lit-timeline",
  "version": "1.0.0",
  "description": "A customizable timeline component built with Lit for displaying chronological events",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./timeline-event.js": {
      "types": "./dist/components/timeline-event.d.ts",
      "default": "./dist/components/timeline-event.js"
    },
    "./timeline-component.js": {
      "types": "./dist/components/timeline-component.d.ts",
      "default": "./dist/components/timeline-component.js"
    }
  },
  "files": [
    "dist",
    "custom-elements.json"
  ],
  "customElements": "custom-elements.json",
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json --watch",
    "test": "web-test-runner",
    "test:watch": "web-test-runner --watch",
    "test:visual": "playwright test",
    "test:visual:update": "playwright test --update-snapshots",
    "lint": "eslint src test stories",
    "lint:fix": "eslint src test stories --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"stories/**/*.ts\" \"*.json\" \"*.md\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\" \"stories/**/*.ts\"",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "analyze": "cem analyze --litelement",
    "prepublishOnly": "npm run lint && npm run build && npm run analyze",
    "ci": "npm run lint && npm run format:check && npm run build && npm test",
    "prepare": "husky"
  },
  "keywords": [
    "lit",
    "web-components",
    "timeline",
    "custom-elements",
    "typescript"
  ],
  "license": "MIT",
  "peerDependencies": {
    "lit": "^3.0.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@custom-elements-manifest/analyzer": "^0.10.0",
    "@eslint/js": "^9.0.0",
    "@open-wc/testing": "^4.0.0",
    "@playwright/test": "^1.45.0",
    "@storybook/addon-essentials": "^8.4.0",
    "@storybook/addon-links": "^8.4.0",
    "@storybook/blocks": "^8.4.0",
    "@storybook/web-components": "^8.4.0",
    "@storybook/web-components-vite": "^8.4.0",
    "@types/mocha": "^10.0.0",
    "@web/dev-server-esbuild": "^1.0.0",
    "@web/test-runner": "^0.19.0",
    "@web/test-runner-playwright": "^0.11.0",
    "axe-core": "^4.11.1",
    "eslint": "^9.0.0",
    "eslint-plugin-lit": "^1.15.0",
    "globals": "^15.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "lit": "^3.2.0",
    "prettier": "^3.4.0",
    "storybook": "^8.4.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^6.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,mdx}": [
      "prettier --write"
    ]
  }
}
